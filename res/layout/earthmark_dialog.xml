<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/earthmark_dialog_view" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="#00000000"
	android:orientation="vertical" android:theme="@android:style/Theme.Black">

	<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/earthmark_viewpoint_"
		android:textSize="20dp" />

	<TextView android:id="@+id/earth_location_placename"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="40dp" android:text="@string/location_placename"
		android:textSize="20dp" />

	<LinearLayout android:layout_width="210dp"
		android:layout_height="25dp" android:layout_marginBottom="10dp"
		android:layout_marginTop="10dp">

		<TextView android:id="@+id/cities_and_landmarks"
			android:layout_width="268dp" android:layout_height="32dp"
			android:text="@string/cities_and_landmarks" android:textSize="20dp" />

	</LinearLayout>

	<Spinner android:id="@+id/earthmarks_spinner"
		android:layout_width="252dp" android:layout_height="wrap_content" />

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button android:id="@+id/add_landmark" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/add_landmark" />

		<Button android:id="@+id/earthmarksCancel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@android:string/cancel" />

	</LinearLayout>

</LinearLayout>